@model SmartShopConnection.Account

@{
    ViewBag.Title = "Thông tin";
    Layout = "~/Views/Shared/_Main.cshtml";
}
<div class="register_account">
    <div class="wrap">
        <h4 class="title">Đăng ký tài khoản</h4>
        @using (Html.BeginForm("Edit","Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

        <div class="col_1_of_2 span_1_of_2">
            @Html.ValidationSummary(true)
        
                @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-2" })
                <div>
                    @Html.TextBoxFor(model => model.UserName, new { disabled = "disabled" })
                    @Html.HiddenFor(model => model.UserName)
                    @Html.ValidationMessageFor(model => model.UserName)
                </div>
        
                @Html.LabelFor(model => model.HoTen, new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(model => model.HoTen)
                    @Html.ValidationMessageFor(model => model.HoTen)
                </div>
        
                @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
        
                @Html.LabelFor(model => model.DienThoai, new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(model => model.DienThoai)
                    @Html.ValidationMessageFor(model => model.DienThoai)
                </div>
        
                @Html.LabelFor(model => model.DiaChi, new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(model => model.DiaChi)
                    @Html.ValidationMessageFor(model => model.DiaChi)
                </div>

            
               <input type="submit" value="Save" class="grey" />
            <div class="clear"></div>
        </div>
        }
    </div>
</div>
