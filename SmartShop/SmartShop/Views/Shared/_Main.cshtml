        function AddToCart(id) {
            $.post("/ShoppingCart/AddToCart", { "id": id },
            function (data) {
                if (data.Code == '0') {
                    $(".cart-amunt").html(data.ttien);
                    $(".product-count").html(data.sluong);
                    
                    var cart = $('.mini_cart .fa-shopping-cart');
                    var imgtofly = $('.single-product.' + id).find('img').eq(0);
                    if (imgtofly) {
                        var imgclone = imgtofly.clone()
                            .offset({ top: imgtofly.offset().top, left: imgtofly.offset().left })
                            .css({ 'opacity': '0.7', 'position': 'absolute', 'height': '270px', 'width': '360px', 'z-index': '1000' })
                            .appendTo($('body'))
                            .animate({
                                'top': cart.offset().top,
                                'left': cart.offset().left,
                                'width': 55,
                                'height': 55
                            }, 1000, 'easeInElastic');
                        imgclone.animate({ 'width': 0, 'height': 0 }, function () { $(this).detach() });
                    }
                }
            });
            return false;
        }

        $(window).scroll(function () {

            var y = $(window).scrollTop();

            if (y >= 38) {
                $(".mainmenu-area").addClass("scroll");
            }
            else {
                $(".mainmenu-area").removeClass("scroll");
            }
        });
    </script>
