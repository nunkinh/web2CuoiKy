@model SmartShopConnection.Product
@{
    ViewBag.Title = "Chi tiết";
}
<div class="single" id="shop">
    <div class="wrap">
        
        <div class="cont span_2_of_3">
            <div class="labout span_1_of_a1">
                <!-- start product_slider -->
                <ul id="etalage">
                    <li>
                        <a href="">
                            <img class="etalage_thumb_image" src="~/image/product/@Html.DisplayFor(model => model.Hinh)" />
                            <img class="etalage_source_image" src="~/image/product/@Html.DisplayFor(model => model.Hinh)" />
                        </a>
                    </li>
                    <li>
                        <img class="etalage_thumb_image" src="~/image/product/@Html.DisplayFor(model => model.Hinh)" />
                        <img class="etalage_source_image" src="~/image/product/@Html.DisplayFor(model => model.Hinh)" />
                    </li>
                    <li>
                        <img class="etalage_thumb_image" src="~/image/product/@Html.DisplayFor(model => model.Hinh)" />
                        <img class="etalage_source_image" src="~/image/product/@Html.DisplayFor(model => model.Hinh)" />
                    </li>
                    <li>
                        <img class="etalage_thumb_image" src="~/image/product/@Html.DisplayFor(model => model.Hinh)" />
                        <img class="etalage_source_image" src="~/image/product/@Html.DisplayFor(model => model.Hinh)" />
                    </li>
                    <li>
                        <img class="etalage_thumb_image" src="~/image/product/@Html.DisplayFor(model => model.Hinh)" />
                        <img class="etalage_source_image" src="~/image/product/@Html.DisplayFor(model => model.Hinh)" />
                    </li>
                </ul>

                <!-- end product_slider -->
            </div>
            <div class="cont1 span_2_of_a1">
                <h3 class="m_3">@Html.DisplayFor(model => model.TenSP)</h3>

                <div class="price_single">

                    <span class="actual">@Html.DisplayFor(model => model.Gia)</span>
                </div>

                <ul class="add-to-links">
                    <li><img src="~/Image/wish.png" alt="" /><a class="grey" id="addcart" href="#" onclick="AddToCart('@Html.DisplayFor(model => model.MaSP)')">Add To Bag</a></li>
                </ul>

            </div>
            <div class="clear"></div>


            <ul id="flexiselDemo3">
                <li><img src="~/Image/pic11.jpg" /><div class="grid-flex"><a href="#">Bloch</a><p>Rs 850</p></div></li>
                <li><img src="~/Image/pic10.jpg" /><div class="grid-flex"><a href="#">Capzio</a><p>Rs 850</p></div></li>
                <li><img src="~/Image/pic9.jpg" /><div class="grid-flex"><a href="#">Zumba</a><p>Rs 850</p></div></li>
                <li><img src="~/Image/pic8.jpg" /><div class="grid-flex"><a href="#">Bloch</a><p>Rs 850</p></div></li>
                <li><img src="~/Image/pic7.jpg" /><div class="grid-flex"><a href="#">Capzio</a><p>Rs 850</p></div></li>
            </ul>
            <script type="text/javascript">
                $(window).load(function () {
                    $("#flexiselDemo1").flexisel();
                    $("#flexiselDemo2").flexisel({
                        enableResponsiveBreakpoints: true,
                        responsiveBreakpoints: {
                            portrait: {
                                changePoint: 480,
                                visibleItems: 1
                            },
                            landscape: {
                                changePoint: 640,
                                visibleItems: 2
                            },
                            tablet: {
                                changePoint: 768,
                                visibleItems: 3
                            }
                        }
                    });

                    $("#flexiselDemo3").flexisel({
                        visibleItems: 5,
                        animationSpeed: 1000,
                        autoPlay: true,
                        autoPlaySpeed: 3000,
                        pauseOnHover: true,
                        enableResponsiveBreakpoints: true,
                        responsiveBreakpoints: {
                            portrait: {
                                changePoint: 480,
                                visibleItems: 1
                            },
                            landscape: {
                                changePoint: 640,
                                visibleItems: 2
                            },
                            tablet: {
                                changePoint: 768,
                                visibleItems: 3
                            }
                        }
                    });

                });
            </script>
            <script type="text/javascript" src="~/Scripts/js/jquery.flexisel.js"></script>
            <div class="toogle">
                <h3 class="m_3">Product Details</h3>
                <p class="m_text">@Html.Raw(Model.MoTa)</p>
            </div>
            <div class="toogle">
                <h3 class="m_3">Product Comment</h3>

                <p class="m_text">
                    @Html.Action("Create", "Comment")
                    @Html.Action("Cmt", "Comment", new { page = Page})
                </p>
            </div>
        </div>
        <div class="clear"></div>
    </div>
</div>